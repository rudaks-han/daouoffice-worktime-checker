{
  "name": "그룹웨어 출퇴근 확인 v3",
  "version": "0.0.2",
  "description": "그룹웨어(다우오피스)에 출퇴근을 자동으로 기록하는 기능을 제공합니다.",
  "action": {
    "default_icon": "images/icon-128.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": [
    "notifications",
    "background",
    "storage"
  ],
  "host_permissions": [
    "https://spectra.daouoffice.com/api/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'https://www.gstatic.com/' 'https://*.firebaseio.com' 'https://www.googleapis.com'; object-src 'self'"
  },
  "manifest_version" : 3
}
